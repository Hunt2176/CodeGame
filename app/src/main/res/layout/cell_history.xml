<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/scoreView" android:layout_weight="1"
            android:textAlignment="center"/>
    <TextView
            android:text="Percent Correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/percentView" android:layout_weight="1"
            android:textAlignment="center"/>
    <TextView
            android:text="Language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/langView" android:layout_weight="1"
            android:textAlignment="center"/>
</LinearLayout>